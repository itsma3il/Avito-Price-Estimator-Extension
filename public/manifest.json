{
  "manifest_version": 3,
  "name": "Car Price Estimator Pro",
  "version": "1.0.0",
  "description": "Professional car price estimation tool for avito.ma",
  "action": {
    "default_popup": "index.html",
    "default_title": "Car Price Estimator",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://avito.ma/*",
    "https://api.your-car-estimator.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://avito.ma/*"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "https://avito.ma/*"
      ]
    }
  ]
}